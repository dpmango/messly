// ICONS
.ico
  display: inline-block
  font-style: normal
  content: ' '
  background-repeat: no-repeat
  background-position: center
  background-size: contain
  vertical-align: middle

  &-spiral
    background: url('../images/el/heroCircles.png') no-repeat right center
    size: 1358px
    position: absolute
    top: -45%
    right: -65%
    z-index: -1
    @media($tablet)
      transform: scale(.8)
      top: -66%
      right: -115%
    @media($mobile)
      top: -100%
      right: -150%

  &-hero-phone
    position: relative
    background: url('../images/heroPhone.png') no-repeat center center
    size: 355px 724px
    background-size: 355px 724px
    @media($tablet)
      size: 284px 580px
      background-size: 284px 580px
    @media($mobile)
      size: 230px 500px
      background-size: 230px 500px

  &-logo
    background-image: url('../images/el/V2awhite@2x.png')
    size: 229px 64px
    @media($mobile)
      size: 180px 50px
    @media($mobile-s)
      size: 160px 45px

  &-social-fb
    background-image: svg-load('../../images/svg/social-facebook.svg', fill=#fff)
    size: 30px
    &:hover
      background-image: svg-load('../../images/svg/social-facebook.svg', fill=$fontColorMuted)

  &-social-tw
    background-image: svg-load('../../images/svg/social-twitter.svg', fill=#fff)
    size: 30px
    &:hover
      background-image: svg-load('../../images/svg/social-twitter.svg', fill=$fontColorMuted)

  &-how-medical-file
    background-image: svg-load('../../images/svg/how-medical-file.svg')
    size: 64px
  &-how-hospital
    background-image: svg-load('../../images/svg/how-hospital.svg')
    size: 64px
  &-how-swipe
    background-image: svg-load('../../images/svg/how-swipe.svg')
    size: 64px

  &-feature-graph
    background-image: svg-load('../../images/svg/ico-feature-graph.svg')
    size: 32px 35px
  &-feature-cloud
    background-image: svg-load('../../images/svg/ico-feature-cloud.svg')
    size: 38px 23px
  &-feature-devise
    background-image: svg-load('../../images/svg/ico-feature-devise.svg')
    size: 38px 34px
  &-feature-globe
    background-image: svg-load('../../images/svg/ico-feature-globe.svg')
    size: 34px
  &-feature-infinity
    background-image: svg-load('../../images/svg/ico-feature-infinity.svg')
    size: 34px 15px


// ICONMOON
[class^="icon-"], [class*=" icon-"]
  font-family: 'icomoon' !important
  speak: none
  font-style: normal
  font-weight: normal
  font-variant: normal
  text-transform: none
  line-height: 1
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale


.icon-user-md:before
  content: "\f0f0"
.icon-hospital-o:before
  content: "\f0f8"
.icon-slideshare:before
  content: "\f1e7"

@keyframes rotate
  from
    transform: rotate(0)
  to
    transform: rotate(360deg)
